<%= semantic_form_for @my_registration do |f| %>
  <%= f.inputs do %>
    <%= f.input :name,      :input_html => { :size => 20 }, :required => true, :wrapper_html => { :class => "important" } %>
    <%= f.input :email,      :input_html => { :size => 20 } %>
    <%= f.input :cell,      :input_html => { :size => 20 } %>
    <%= f.input :category, as: :select, collection: Order.pluck(:order_name) %>
    <%= f.input :gender, as: :radio, collection: [:Male, :Female], :label => "Sex" %>
    <%= f.input :subject, :input_html => { :class => 'autogrow', :rows => 10, :cols => 20, :maxlength => 1000  } %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
